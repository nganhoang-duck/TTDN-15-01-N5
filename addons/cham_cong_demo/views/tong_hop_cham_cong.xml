<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_tong_hop_cham_cong_form" model="ir.ui.view">
            <field name="name">tong_hop_cham_cong</field>
            <field name="model">tong_hop_cham_cong</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px">Tổng hợp chấm công</div>
                        <group col="4" string="Thông tin chung">
                            <field name="nhan_vien_id"/>
                            <field name="phong_ban_id"/>
                            <field name="nam"/>
                            <field name="thang"/>
                            <field name="ngay"/>
                            <field name="so_lan_di_muon"/>
                            <field name="so_lan_ve_som"/>
                            <field name="so_lan_nghi"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tong_hop_cham_cong_tree" model="ir.ui.view">
            <field name="name">tong_hop_cham_cong</field>
            <field name="model">tong_hop_cham_cong</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="nhan_vien_id"/>
                    <field name="phong_ban_id"/>
                    <field name="nam"/>
                    <field name="thang"/>
                    <field name="ngay"/>
                    <field name="so_lan_di_muon"/>
                    <field name="so_lan_ve_som"/>
                    <field name="so_lan_nghi"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="tong_hop_cham_cong_search">
            <field name="model">tong_hop_cham_cong</field>
            <field name="arch" type="xml">
                <search>
                    <field name="nhan_vien_id"/>
                    <field name="phong_ban_id"/>
                    <field name="nam"/>
                    <field name="thang"/>
                    <field name="ngay"/>
                    <field name="so_lan_di_muon"/>
                    <field name="so_lan_ve_som"/>
                    <field name="so_lan_nghi"/>

                    <group expand="0" string="Lọc theo thời gian">
                        <filter name="filter_3_nam" string="3 năm gần đây"
                            domain="[('nam', '>=', (datetime.today().year - 2))]"/>
                        
                        <filter name="filter_1_nam" string="1 năm gần đây"
                            domain="[('nam', '=', datetime.today().year)]"/>
                        
                        <filter name="filter_1_thang" string="1 tháng gần đây"
                            domain="[('nam', '=', datetime.today().year), ('thang', '=', datetime.today().month)]"/>
                        
                        <filter name="filter_1_tuan" string="1 tuần gần đây"
                            domain="[('nam', '=', datetime.today().year), ('thang', '=', datetime.today().month), ('tuan', '=', datetime.today().isocalendar()[1])]"/>
                    </group>

                </search>
            </field>
        </record>

        <record id="view_tong_hop_cham_cong_pivot" model="ir.ui.view">
            <field name="name">tong_hop_cham_cong_pivot</field>
            <field name="model">tong_hop_cham_cong</field>
            <field name="arch" type="xml">
                <pivot string="Tổng hợp chấm công">
                    <field name="phong_ban_id" type="row"/>
                    <field name="nhan_vien_id" type="row"/>
                    <field name="nam" type="col"/>
                    <field name="thang" type="col"/>
                    <field name="ngay" type="col"/>
                    <field name="tuan" type="col"/>
                    <field name="so_lan_di_muon" type="measure"/>
                    <field name="so_lan_ve_som" type="measure"/>
                    <field name="so_lan_nghi" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Biểu đồ theo năm (3 năm gần đây) -->
        <record id="view_tong_hop_cham_cong_graph_nam" model="ir.ui.view">
            <field name="name">tong_hop_cham_cong_graph_nam</field>
            <field name="model">tong_hop_cham_cong</field>
            <field name="arch" type="xml">
                <graph string="Tổng hợp chấm công - 3 năm gần đây" type="bar" stacked="False">
                    <field name="nam" type="row"/>
                    <field name="phong_ban_id" type="col"/>
                    <field name="so_lan_di_muon" type="measure"/>
                    <field name="so_lan_ve_som" type="measure"/>
                    <field name="so_lan_nghi" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- Biểu đồ theo tháng (1 năm gần đây) -->
        <record id="view_tong_hop_cham_cong_graph_thang" model="ir.ui.view">
            <field name="name">tong_hop_cham_cong_graph_thang</field>
            <field name="model">tong_hop_cham_cong</field>
            <field name="arch" type="xml">
                <graph string="Tổng hợp chấm công - 1 năm gần đây" type="bar" stacked="False">
                    <field name="thang" type="row"/>
                    <field name="phong_ban_id" type="col"/>
                    <field name="so_lan_di_muon" type="measure"/>
                    <field name="so_lan_ve_som" type="measure"/>
                    <field name="so_lan_nghi" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- Biểu đồ theo tuần (1 tháng gần đây) -->
        <record id="view_tong_hop_cham_cong_graph_tuan" model="ir.ui.view">
            <field name="name">tong_hop_cham_cong_graph_tuan</field>
            <field name="model">tong_hop_cham_cong</field>
            <field name="arch" type="xml">
                <graph string="Tổng hợp chấm công - 1 tháng gần đây" type="bar" stacked="False">
                    <field name="tuan" type="row"/>
                    <field name="phong_ban_id" type="col"/>
                    <field name="so_lan_di_muon" type="measure"/>
                    <field name="so_lan_ve_som" type="measure"/>
                    <field name="so_lan_nghi" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- Biểu đồ theo ngày (1 tuần gần đây) -->
        <record id="view_tong_hop_cham_cong_graph_ngay" model="ir.ui.view">
            <field name="name">tong_hop_cham_cong_graph_ngay</field>
            <field name="model">tong_hop_cham_cong</field>
            <field name="arch" type="xml">
                <graph string="Tổng hợp chấm công - 1 tuần gần đây" type="bar" stacked="False">
                    <field name="ngay" type="row"/>
                    <field name="phong_ban_id" type="col"/>
                    <field name="so_lan_di_muon" type="measure"/>
                    <field name="so_lan_ve_som" type="measure"/>
                    <field name="so_lan_nghi" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- Action cho 3 năm gần đây -->
        <record id="action_tong_hop_cham_cong_nam" model="ir.actions.act_window">
            <field name="name">Tổng hợp chấm công - 3 năm gần đây</field>
            <field name="res_model">tong_hop_cham_cong</field>
            <field name="view_mode">graph</field>
            <field name="view_id" ref="view_tong_hop_cham_cong_graph_nam"/>
            <field name="domain">[('nam', '>=', (context_today().year - 2))]</field>
        </record>

        <!-- Action cho 1 năm gần đây -->
        <record id="action_tong_hop_cham_cong_thang" model="ir.actions.act_window">
            <field name="name">Tổng hợp chấm công - 1 năm gần đây</field>
            <field name="res_model">tong_hop_cham_cong</field>
            <field name="view_mode">graph</field>
            <field name="view_id" ref="view_tong_hop_cham_cong_graph_thang"/>
            <field name="domain">[('nam', '=', context_today().year)]</field>
        </record>

        <!-- Action cho 1 tháng gần đây -->
        <record id="action_tong_hop_cham_cong_tuan" model="ir.actions.act_window">
            <field name="name">Tổng hợp chấm công - 1 tháng gần đây</field>
            <field name="res_model">tong_hop_cham_cong</field>
            <field name="view_mode">graph</field>
            <field name="view_id" ref="view_tong_hop_cham_cong_graph_tuan"/>
            <field name="domain">[('nam', '=', context_today().year), ('thang', '=', context_today().month)]</field>
        </record>

        <!-- Action cho 1 tuần gần đây -->
        <record id="action_tong_hop_cham_cong_ngay" model="ir.actions.act_window">
            <field name="name">Tổng hợp chấm công - 1 tuần gần đây</field>
            <field name="res_model">tong_hop_cham_cong</field>
            <field name="view_mode">graph</field>
            <field name="view_id" ref="view_tong_hop_cham_cong_graph_ngay"/>
            <field name="domain">[('nam', '=', context_today().year), ('thang', '=', context_today().month), ('tuan', '=', context_today().isocalendar()[1])]</field>
        </record>

        <record id="action_tong_hop_cham_cong" model="ir.actions.act_window">
            <field name="name">Tổng hợp chấm công</field>
            <field name="res_model">tong_hop_cham_cong</field>
            <field name="view_mode">tree,form,pivot,graph</field>
            <field name="search_view_id" ref = "tong_hop_cham_cong_search"/>
        </record>
    </data>
</odoo>
        
    